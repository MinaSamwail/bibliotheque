{{!-- <h1>Description</h1> --}}
<div class="card-description">
    <div class="book-img">
        <img class="book-cover" src="{{bookDetail.[0].volumeInfo.imageLinks.smallThumbnail}}" alt="{{title}}">
    </div>
    <div class="book-info">
        <h2 class="book-title">{{bookDetail.[0].volumeInfo.title}}</h2>
        <p class="book-authors">{{bookDetail.[0].volumeInfo.authors}}</p>
        <p class="book-resum">RÉSUMÉ</p>
        <p class="book-description">{{bookDetail.[0].volumeInfo.description}}</p>
    </div>
</div>