<form method="POST" action="/user/dashboard/create" class="form" enctype="multipart/form-data">
    <h1>Create your Book</h1>
    <label for="title" class="label">Title</label>
    <input class="input" id="title" name="title" type="text" value="Thrones of penguin">

    <label for="author" class="label">Author</label>
    <input class="input" id="author" name="author" type="text" value="Gerrard Magax">

    <label for="description" class="label">Description</label>
    <input class="input" id="description" name="description" type="text" value="Books about penguin">

    <label for="language" class="label">Language</label>
    <input class="input" id="language" name="language" type="text" value="FR">

    <label for="pages" class="label">Pages</label>
    <input class="input" id="pages" name="pages" type="text" value="230">
     <input id="userid" name="UserId" value="{{user._id}}" type="hidden">
    <label class="label" for="smallThumbnail">
        <span>Cover of the book </span>
        <i class="icon fas fa-cloud-upload-alt fa-2x"></i>
    </label>
    <input class="is-hidden" id="smallThumbnail" type="file" name="smallThumbnail">
    <button class="btn">create</button>
</form>